{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":label(dependencies)",
    ":timezone(Europe/Berlin)",
    "schedule:automergeEarlyMondays",
    ":automergeStableNonMajor",
    ":disableRateLimiting",
    "regexManagers:dockerfileVersions"
  ],
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "custom.regex",
    "npm",
    "pip_requirements"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["passbolt/passbolt"],
      "customChangelogUrl": "https://github.com/passbolt/passbolt_api"
    },
    {
      "matchPackageNames": ["renovate/renovate"],
      "allowedVersions": "<=36.57.1",
      "prBodyNotes": ":information_source: [Bitbucket Release Notes](https://confluence.atlassian.com/bitbucketserver/release-notes-872139866.html)"
    },
    {
      "matchDatasources": ["endoflife-date"],
      "matchPackageNames": ["python"],
      "extractVersion": "^(?<version>\\d+\\.\\d+).+$"
    },
    {
      "matchManagers": ["npm"],
      "dependencyDashboardApproval": true
    },
    {
      "matchPackageNames": "alpine_edge/opentofu",
      "prBodyDefinitions": {
        "Package": "[{{{depName}}}](https://github.com/opentofu/opentofu)"
      },
      "prBodyNotes": ":information_source: [OpenTofu Changelog](https://github.com/opentofu/opentofu/blob/main/CHANGELOG.md)",
      "customChangelogUrl": "https://github.com/opentofu/opentofu"
    },
    {
      "matchPackageNames": ["opentofu/opentofu"],
      "matchDatasources": ["github-releases"],
      "branchPrefix": "hello"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_version\\s*=\\s*\"(?<currentValue>.*)\""
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": ["^\\.gitlab-ci\\.yml$"],
      "matchStrings": ["OPENTOFU_VERSION: \"(?<currentValue>.*)\"\\s"],
      "depNameTemplate": "opentofu/opentofu",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "loose",
      "autoReplaceStringTemplate": "    - OPENTOFU_VERSION: \"(?<currentValue>.*)\"\\n    - OPENTOFU_VERSION: \"(?<newValue>.*)"
    }
  ]
}
